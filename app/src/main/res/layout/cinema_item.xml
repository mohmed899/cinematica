<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_money_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cinema_img"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/cinema_name"
        style="@style/MainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/Cinema_movie_count"
        android:layout_toEndOf="@id/cinema_img"
        android:paddingStart="8dp"
        tools:text="Cine Max - Cityscape "
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/Cinema_address"
        style="@style/description"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cinema_name"
        android:layout_marginStart="2dp"
        android:layout_toStartOf="@id/Cinema_movie_count"
        android:layout_toEndOf="@id/cinema_img"
        android:paddingStart="8dp"
        tools:text="Omar Ibn El Khattab St., Heliopolis, Cairo, Cairo Governorate"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/Cinema_movie_count"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/circle_textview"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textColor="#FDF6F6"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text=" 4\n Movies" />

    <TextView
        android:id="@+id/movie_time_money"
        style="@style/Movie_diss_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cinema_address"
        android:layout_toStartOf="@id/Cinema_movie_count"
        android:layout_toEndOf="@id/cinema_img"
        android:textAlignment="center"
        tools:text="30EP 1:00|12:00  70EP 3:00" />


</RelativeLayout>
